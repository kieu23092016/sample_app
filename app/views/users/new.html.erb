<% provide(:title, t("text.sign_up") ) %>
<h1><%= t("text.sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name , t("text.name") %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password, t("text.password") %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, t("text.confirmation") %>
      <%= f.password_field :password_confirmation, class: 'form-control'%>
      <%= f.submit t("text.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
