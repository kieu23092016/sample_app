<% provide(:title, t("text.login")) %>
<h1><%= t("text.login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("text.password") %>
      <%= link_to t("text.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("text.remember_me") %></span>
      <% end %>

      <%= f.submit t("text.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("text.new_user") %> <%= link_to t("text.sign_up_now"), signup_path %></p>
  </div>
</div>
